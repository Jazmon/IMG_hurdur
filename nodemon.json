{
  "restartable": "rs",
  "ignore": [
    ".git",
    "node_modules/**/node_modules"
  ],
  "verbose": true,
  "execMap": {
    "js": "node --harmony"
  },
  "events": {
    "restart": "echo -e \"App restarted due to:\n'$FILENAME'\" with title \"nodemon\""
  },
  "watch": [
    "src/server/"
  ],
  "env": {
    "NODE_ENV": "development"
  },
  "ext": "js json"
}
